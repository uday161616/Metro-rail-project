  <script>
    const from = document.getElementById("from");
    const to = document.getElementById("to");
    const details_form = document.getElementById("get_details");
    details_form.addEventListener("submit", (e) => {
      e.preventDefault();
      let from_val = from.value.trim();
      let to_val = to.value.trim();
      const btn = document.getElementById("button_details");

      validate_form();
    });
    const validate_form = () => {
      let from_val = from.value.trim();
      let to_val = to.value.trim();
      if (from_val == "none") {
        SetError(from, "please select any location");
      } else if (to_val == "none") {
        SetError(to, "please select any location");
      } else if (to_val == from_val) {
        SetError(to, "destination should be different");
      } else {
        var req = new XMLHttpRequest();
        req.open("POST", "/get_fare");
        req.setRequestHeader(
          "Content-Type",
          "application/x-www-form-urlencoded"
        );
        req.send("&to=" + to_val + "&from=" + from_val);
        req.onreadystatechange = function () {
          console.log(req.readyState + " " + req.status);
          if (req.readyState == 4 && req.status == 200) {
            console.log("successfully modal is used");
            console.log(req);
            const responseObj = JSON.parse(req.responseText);

            console.log(responseObj);
            document.getElementsByClassName(
              "table"
            )[0].children[0].children[0].children[1].innerText =
              responseObj.source;
            document.getElementsByClassName(
              "table"
            )[0].children[0].children[1].children[1].innerText =
              responseObj.destination;
            document.getElementsByClassName(
              "table"
            )[0].children[0].children[2].children[1].innerText =
              responseObj.fare;
            $("#myModal").modal("show");
          }
        };
      }
    };
    const SetError = (element, message) => {
      const inputControl = element.parentElement;
      const errorDisplay = inputControl.querySelector(".error");
      errorDisplay.innerText = message;
      setTimeout(function () {
        errorDisplay.innerText = ""; // Remove the text after 5 seconds
      }, 2000);
      inputControl.classList.remove("success");
    };
  </script>
