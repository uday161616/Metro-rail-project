    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="signup_card">
                    <div style="
                color: white;
                background-color: rgb(11, 131, 194);
                height: 30px;
              ">
                        Sign up
                    </div>
                    <form id="register_sign_up">
                        <div class="form-group row">
                            <label for="formGroupExampleInput" class="col-sm-2 col-form-label"><span
                                    style="color: red">*</span>First Name</label>
                            <div class="col-md-9 col-sm-9">
                                <input type="text" class="form-control" id="formGroupExampleInput"
                                    placeholder="First name" required />
                            </div>
                            <div class="error"></div>
                        </div>
                        <div class="form-group row">
                            <label for="formGroupExampleInput2" class="col-sm-2 col-form-label"><span
                                    style="color: red">*</span>Last Name</label>
                            <div class="col-md-9 col-sm-9">
                                <input type="text" class="form-control" id="formGroupExampleInput2"
                                    placeholder="last name" />
                                <div class="error"></div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="phone" class="col-sm-2 col-form-label"><span
                                    style="color: red">*</span>Mobile</label>
                            <div class="col-md-9 col-sm-9">
                                <input type="tel" class="form-control" id="phone" placeholder="phone number"
                                    pattern="[1-9]{1}[0-9]{9}" required />
                                <div class="error"></div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="inputEmail4" class="col-sm-2 col-form-label"><span
                                    style="color: red">*</span>Email</label>

                            <div class="col-md-9 col-sm-9">
                                <input type="email" class="form-control" id="inputEmail4" placeholder="Email"
                                    required />
                                <div class="error"></div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword4" class="col-sm-2 col-form-label"><span
                                    style="color: red">*</span>Password</label>
                            <div class="col-md-9 col-sm-9">
                                <input type="password" class="form-control" id="inputPassword4" placeholder="Password"
                                    required />
                                <div class="error"></div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword5" class="col-sm-2 col-form-label"><span
                                    style="color: red">*</span>Re-Password</label>
                            <div class="col-md-9 col-sm-9">
                                <input type="password" class="form-control" id="inputPassword5" placeholder="Password"
                                    required />
                                <div class="error"></div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-9 col-form-label"> </div>
                            <div class="col-md-2 col-sm-3">

                                <button type="submit" class="btn btn-primary" style="margin-top: 1em; margin-bottom:4%;margin-left:4%;">
                                    Register
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col">
                <div class="login_card">
                    <div style="
                color: white;
                background-color: rgb(11, 131, 194);
                height: 30px;
              ">
                        Login
                    </div>
                    <form id="login_form">
                        <div class="form-group row">
                            <label for="inputEmail6" class="col-sm-2 col-form-label"><span
                                    style="color: red">*</span>Email</label>
                            <div class="col-md-9 col-sm-9">
                                <input type="email" class="form-control" id="inputEmail6" placeholder="Email"
                                    required />
                                <div class="error"></div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword6" class="col-sm-2 col-form-label"><span
                                    style="color: red">*</span>Password</label>
                            <div class="col-md-9 col-sm-9">
                                <input type="password" class="form-control" id="inputPassword6" placeholder="Password"
                                    required />
                                <div class="error"></div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-9 col-form-labl"> </div>
                            <div class="col-md-3 col-sm-3">

                                <button type="submit" class="btn btn-primary" style="margin-top: 1em; margin-bottom:4%;">
                                    Login
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="forgot_card">
                    <div style="
                color: white;
                background-color: rgb(11, 131, 194);
                height: 30px;
              ">
                        Forgot
                    </div>
                    <form id="forgot_password">
                        <div class="form-group row">

                            <label for="inputEmail7" class="col-sm-2 col-form-label"><span
                                    style="color: red">*</span>Email</label>
                            <div class="col-md-9 col-sm-9">

                                <input type="email" class="form-control" id="inputEmail7" placeholder="Email"
                                    required />
                                <div class="error"></div>
                            </div>

                        </div>
                        <div class="form-group row">
                            <div class="col-sm-9 col-form-labl"> </div>
                            <div class="col-md-3 col-sm-3">

                                <button type="submit" class="btn btn-primary" style="margin-top: 1em; margin-bottom:4%;">
                                    submit
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
